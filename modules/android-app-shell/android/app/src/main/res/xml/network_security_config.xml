<?xml version="1.0" encoding="utf-8"?>
<!--
    Network Security Configuration for HWMS Development

    This configuration allows cleartext (HTTP) traffic for local development.
    In production, remove or restrict these settings.

    Allowed hosts:
    - 10.0.2.2: Android emulator's alias for host machine localhost
    - 192.168.*.*: Local network IPs for physical device testing
    - localhost/127.0.0.1: Direct localhost access
-->
<network-security-config>
    <!-- Base config: Allow cleartext for development domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Development: Android Emulator localhost -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">10.0.2.2</domain>
    </domain-config>

    <!-- Development: Physical device via local network -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.0.0</domain>
    </domain-config>

    <!-- Development: Local network range 192.168.*.* -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">192.168.1.1</domain>
        <domain includeSubdomains="false">192.168.1.2</domain>
        <domain includeSubdomains="false">192.168.1.3</domain>
        <domain includeSubdomains="false">192.168.1.4</domain>
        <domain includeSubdomains="false">192.168.1.5</domain>
        <domain includeSubdomains="false">192.168.1.100</domain>
        <domain includeSubdomains="false">192.168.0.100</domain>
        <domain includeSubdomains="false">192.168.0.1</domain>
    </domain-config>

    <!-- Development: Localhost -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">localhost</domain>
        <domain includeSubdomains="false">127.0.0.1</domain>
    </domain-config>
</network-security-config>
